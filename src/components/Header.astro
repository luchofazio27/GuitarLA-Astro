---
import { Image } from 'astro:assets';
import logo from '../img/logo.svg'

const pathname = Astro.url.pathname;
---

<header class="header">
    <div class="container bar">
        <a href="/">
            <Image src={logo} alt="imagen logotipo" />
        </a>

        <nav class="navigation">
            <a href="/" class={pathname === '/' ? 'active' : ''}>
                Inicio
            </a>
            <a href="/we" class={pathname === '/we' ? 'active' : ''}>
                Nosotros
            </a>
            <a href="/store" class={pathname === '/store' ? 'active' : ''}>
                Tienda
            </a>
            <a href="/blog" class={pathname === '/blog' ? 'active' : ''}>
                Blog
            </a>
        </nav>
    </div>
</header>

<style>
    .header {
    background-image: linear-gradient(to right, rgb(0 0 0 / .8), rgb(0 0 0 / .7)), url(../img/header.jpg);
    padding: 5rem 0;
    background-position: center;
    background-size: cover;
}
.header img {
    width: 30rem;
}

.bar {
    display: flex;
    flex-direction: column;
    align-items: center;
}
@media (min-width: 768px) {
    .bar {
        flex-direction: row;
        justify-content: space-between;
    }
}

.navigation {
    margin-top: 5rem;
    display: flex;
    align-items: center;
    gap: 2rem;
}
@media (min-width: 768px) {
    .navigation {
        margin: 0;
    }
}
.navigation a {
    color: var(--white);
    text-decoration: none;
    font-size: 1.4rem;
    font-weight: 700;
    text-transform: uppercase;
    padding: .5rem;
    transition-property: background-color;
    transition-duration: 300ms;
}
.navigation a:hover,
.active {
    background-color: var(--primary);
}
</style>