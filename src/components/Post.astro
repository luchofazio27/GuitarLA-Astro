---
import { formatDate } from '../helpers'

export interface Props {
    title: string;
    publishedAt: string;
    content: string;
    image: string;
    url: string
}

const {title, publishedAt, content, image, url} = Astro.props
---

<article>
    <img src={image} alt={`imagen blog ${title}`} />
    <div class="content">
        <h3>{title}</h3>
        <p class="date">{formatDate(publishedAt)}</p>
        <p class="summary">{content}</p>
        <a href={`/blog/${url}`} class="link">Leer Post</a>
    </div>
</article>

<style>
    .post {
    max-width: 80rem;
    margin: 0 auto;
}
.content {
    padding: 1.5rem;
}
.content h3 {
    font-weight: 900;
    font-size: 2.8rem;
    margin: 0;
}
.date {
    font-size: 1.6rem;
    color: var(--primary);
}
.summary {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
}
.text {
    white-space: pre-wrap;
}

.mt-3 {
    margin-top: 3rem;
}
.link {
    margin-top: 2rem;
    display: block;
    background-color: var(--black);
    color: var(--white);
    text-decoration: none;
    padding: 1rem;
    text-align: center;
    text-transform: uppercase;
    font-size: 1.4rem;
    font-weight: 700;
    transition-property: background-color;
    transition-duration: 300ms;
}
.link:hover {
    background-color: var(--primary);
}
</style>